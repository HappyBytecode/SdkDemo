<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@drawable/sel_defult_option"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_20"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_larger_dark_bule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/item_black_primary"
        android:textSize="@dimen/text_size_middle"
        tools:text="订单流程" />

    <ImageView
        android:layout_width="@dimen/option_nav_width"
        android:layout_height="@dimen/option_nav_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/arrow_right"
        android:tint="#808080" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>
