<?xml version="1.0" encoding="utf-8"?>
<anda.travel.driver.widget.layout.BaseLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_white">

        <TextView
            android:id="@+id/tv_red_point"
            android:layout_width="@dimen/padding_8"
            android:layout_height="@dimen/padding_8"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/unread_msg_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:maxLength="12"
            android:text="123"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/home_message_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_alignLeft="@id/tv_title"
            android:layout_marginTop="@dimen/margin_16"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxWidth="293dp"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/item_gray_primary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/complain_gray"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>
</anda.travel.driver.widget.layout.BaseLinearLayout>
