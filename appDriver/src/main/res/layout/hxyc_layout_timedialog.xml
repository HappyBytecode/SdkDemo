<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dra_time_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextNormal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height_header"
        android:gravity="center"
        android:text="设置时间" />

    <View style="@style/LineViewStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <anda.travel.driver.baselibrary.view.wheel.hh.WheelView
            android:id="@+id/wheel1"
            android:layout_width="@dimen/time_item_width"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            style="@style/TextNormal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:text="日" />

        <anda.travel.driver.baselibrary.view.wheel.hh.WheelView
            android:id="@+id/wheel2"
            android:layout_width="@dimen/time_item_width"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            style="@style/TextNormal"
            android:layout_marginStart="5dp"
            android:text="时" />

    </LinearLayout>

    <View style="@style/LineViewStyle" />

    <TextView
        android:id="@+id/tv_sure"
        style="@style/TextNormal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height_header"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorPrimary" />

</LinearLayout>