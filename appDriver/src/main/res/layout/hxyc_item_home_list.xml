<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@drawable/div_white_middle_radius"
    android:orientation="vertical"
    android:paddingVertical="@dimen/padding_20"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tv_type"
        style="@style/TextBigWhite"
        android:layout_marginStart="@dimen/margin_18"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="消息类型"
        android:textColor="@color/home_message_title"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="@dimen/margin_20"
        android:clickable="true"
        android:padding="@dimen/padding_2"
        android:src="@drawable/icon_main_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_20"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:textColor="@color/item_gray_primary"
        android:textSize="@dimen/text_size_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_type"
        app:layout_constraintTop_toBottomOf="@id/tv_type"
        tools:text="文本型消息内容文本型消息内容文本型消息内容文本型消息内容文本型消息内容文本型消息内容文本型消息内容文本型消息内容" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_20"
        android:text="12/25 10:00"
        android:textColor="@color/complain_gray"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
