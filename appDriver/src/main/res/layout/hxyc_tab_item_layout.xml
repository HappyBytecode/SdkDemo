<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/tab_item_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tab_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/tab_item_ico"
                android:text="首页"
                android:textColor="@color/tab_un_select"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/tab_item_indicator"
            android:layout_width="46dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_total_message"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/ll_title"
        android:background="@drawable/red_circle2"
        android:gravity="center"
        android:minWidth="18dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="invisible" />
</RelativeLayout>