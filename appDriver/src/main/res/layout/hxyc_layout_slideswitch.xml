<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="@dimen/slide_width"
    android:layout_height="@dimen/slide_height"
    android:background="@drawable/dra_slide_bg">

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="@dimen/slide_btn_width"
        android:layout_height="@dimen/slide_height"
        android:background="@null"
        android:src="@drawable/sel_slide_button_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv0"
            style="@style/StyleSlideItem"
            android:text="实时" />

        <TextView
            android:id="@+id/tv1"
            style="@style/StyleSlideItem"
            android:text="预约" />

    </LinearLayout>

</FrameLayout>